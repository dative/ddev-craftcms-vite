{% extends '_boilerplate/_base_html_layout.twig' %}

{# -- Any <meta> tags that should be included in the <head> #}
{% block headMeta %}
  {% if not craft.vite.devServerRunning() %}
    <link rel="apple-touch-icon" sizes="180x180" href="{{ url('/dist/' ~ currentSite.handle ~ '/apple-touch-icon.png') }}" />
    <link rel="icon" type="image/png" sizes="32x32" href="{{ url('/dist/' ~ currentSite.handle ~ '/favicon-32x32.png') }}" />
    <link rel="icon" type="image/png" sizes="16x16" href="{{ url('/dist/' ~ currentSite.handle ~ '/favicon-16x16.png') }}" />
    <link rel="manifest" href="{{ url('/dist/' ~ currentSite.handle ~ '/site.webmanifest') }}" />
    <link rel="mask-icon" href="{{ url('/dist/' ~ currentSite.handle ~ '/safari-pinned-tab.svg') }}" color="#66a0cb" />
    <link rel="shortcut icon" href="{{ url('/dist/' ~ currentSite.handle ~ '/favicon.ico') }}" />
    <meta name="msapplication-config" content="{{ url('/dist/' ~ currentSite.handle ~ '/browserconfig.xml') }}" />
    <meta name="theme-color" content="#ffffff" />
    <link rel="icon" href="{{ url('/dist/' ~ currentSite.handle ~ '/favicon.svg') }}" type="image/svg+xml" />
  {% endif %}
{% endblock %}

{# -- Any <link> tags that should be included in the <head> #}
{% block headLinks %}
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Crimson+Pro:ital,wght@0,400;0,700;1,400;1,700&family=Plus+Jakarta+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,600;1,700&display=swap" rel="stylesheet" />
  {# Review this after critical css #}
  {% if not craft.vite.devServerRunning() %}
   <link rel="stylesheet" href="{{ craft.vite.entry('src/js/app.css') }}">
  {% endif %}
{% endblock %}

{# -- Any CSS that should be included before </head> -- #}
{% block headCss %}
  {{ craft.vite.includeCriticalCssTags() }}
{% endblock %}

{% set svgSprite = null %}

{# -- Page body -- #}
{% block bodyHtml %}
  {% if craft.vite.devServerRunning() %}
    {% set svgSprite = craft.vite.inline(getenv('SITE_URL') ~ ':' ~ getenv('VITE_PRIMARY_PORT') ~ '/src/img/sprite.svg') %}
  {% else %}
    {% set svgSprite = craft.vite.inline('@webroot' ~ craft.vite.entry("src/img/sprite.svg")) %}
  {% endif %}

  {% if svgSprite %}
    {{ svgSprite|retconAttr( 'svg', { 'style' : 'visibility: hidden; z-index: -1;position: absolute;' } ) }}
  {% endif %}

  <div id="page-container">

    <main class="">
      {% block beforeMainContent %}{% endblock %}
      {% block mainContent %}{% endblock %}
      {% block afterMainContent %}{% endblock %}
    </main>

    {# -- Content that appears below the primary content block -- #}
    {% block subcontent %}{% endblock %}

    {% block siteFooter %}{% endblock %}
  </div>
{% endblock %}

{# -- Any JavaScript that should be included before </body> -- #}
{% block bodyJs %}
  {{ craft.vite.script("src/js/app.ts", true) }}

  {% if not devMode %}
    {# Any tracking scripts not handled by SEOmatic should be entered here #}
  {% endif %}

{% endblock %}
